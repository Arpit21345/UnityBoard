NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:5173
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Database
MONGO_URI=mongodb://127.0.0.1:27017
MONGO_DB_NAME=unityboard

# Auth
JWT_SECRET=change_me
JWT_EXPIRES_IN=7d

# File storage
FILE_STORAGE=local
UPLOADS_DIR=uploads
MAX_UPLOAD_SIZE_MB=10

# Cloudinary (used when FILE_STORAGE=cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=unityboard

# AI Services
# Cohere (Primary AI Service)
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=command-light
AI_MAX_TOKENS=512

# OpenAI (Alternative AI Service - uncomment to use)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-3.5-turbo
# OPENAI_MAX_TOKENS=512

# Google AI (Alternative - uncomment to use)
# GOOGLE_AI_API_KEY=your_google_ai_api_key_here
# GOOGLE_AI_MODEL=gemini-pro

# Claude AI (Alternative - uncomment to use)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-haiku-20240307

# AI Configuration
AI_ENABLED=true
AI_FALLBACK_RESPONSES=true
AI_CONTEXT_MAX_LENGTH=2000

# Realtime (optional)
ENABLE_SOCKET=false

